<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<!--<?import javafx.scene.control.ComboBox?>-->

<VBox xmlns:fx="http://javafx.com/fxml/1"
    fx:id="center"
    fx:controller="org.example.ClassScreenController">
    <HBox styleClass="top-hbox" fx:id="topHBox">
        <TextField fx:id="nameField" onAction="#searchDB" promptText="Class Name"/>
    </HBox>
    <HBox styleClass="middle-hbox" fx:id="middleHBox">
        <ListView fx:id="classList"/>
    </HBox>
    <HBox styleClass="bottom-hbox" fx:id="bottomHBox">
        <Button fx:id="addButton" text="Add a New Class"/>
    </HBox>
</VBox>
